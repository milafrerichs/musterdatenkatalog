{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "",
	"padding": { "top": 50 },
  "data": {
    "url": "/data/cities.csv",
    "format": {"parse": {"datensaetze": "number"}}
  },
  "encoding": {
    "y": {
      "field": "stadt",
      "type": "ordinal",
      "sort": {"field": "datensaetze", "order": "descending"},
      "title": ""
    },
    "x": {
      "field": "datensaetze",
      "type": "quantitative",
      "scale": {"padding": 5},
      "title": "Datens√§tze",
			"axis": {
				"ticks": false,
				"grid": false
			}
    }
  },
  "layer": [
    {"mark": "bar" },
    {
      "mark": {"type": "text", "align": "left", "baseline": "middle", "dx": 3},
      "encoding": {"text": {"field": "datensaetze", "type": "quantitative"}}
    }
  ],
	"config": {
		"bar": {
			"color": "#aecfc8"
		},
		"view": {
			"stroke": "transparent"
		}
	}
}
